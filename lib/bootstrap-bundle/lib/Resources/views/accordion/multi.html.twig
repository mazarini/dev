<div class="accordion accordion-flush" id="{{ name }}">
    {% for item in items %}
        <div class="accordion-item">
            <h2 class="accordion-header" id="{{ name }}-heading-{{ loop.index }}">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#{{ name }}-{{ loop.index }}" aria-expanded="false" aria-controls="{{ name }}-{{ loop.index }}">
                    {% block title %}
                        A
                    {% endblock %}
                </button>
            </h2>
            <div id="{{ name }}-{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="{{ name }}-heading-{{ loop.index }}">
                <div class="accordion-body">
                    {% block content %}
                        A
                    {% endblock %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
